<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_light"
    tools:context=".Psikolog.NavigasiPsikolog">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/frameLayoutPsikolog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/nav"/>
    </ScrollView>

    <LinearLayout
        android:id="@+id/navigation_bar_psikolog"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="660dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/et_navbar"
        android:foregroundGravity="bottom"
        android:gravity="bottom"
        android:orientation="horizontal">

        <GridLayout
            android:id="@+id/gridLayoutHomePsikolog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/ll_home_psikolog"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/img_logo_home_psikolog"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#00FFFFFF"
                    android:elevation="10dp"
                    android:src="@drawable/ellipse" />

                <TextView
                    android:id="@+id/tv_home_navigation_psikolog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:text="Home"
                    android:textSize="20sp" />

            </LinearLayout>

        </GridLayout>

        <GridLayout
            android:id="@+id/gridLayoutPesanPsikolog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/ll_pesan_psikolog"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/img_logo_pesan_psikolog"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#00FFFFFF"
                    android:elevation="10dp"
                    android:src="@drawable/ellipse" />

                <TextView
                    android:id="@+id/tv_pesan_navigation_psikolog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:text="Pesan"
                    android:textSize="20sp" />

            </LinearLayout>

        </GridLayout>

        <GridLayout
            android:id="@+id/gridLayoutProfilPsikolog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/ll_profil_psikolog"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/notesBtn3"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#00FFFFFF"
                    android:elevation="10dp"
                    android:src="@drawable/ellipse" />

                <TextView
                    android:id="@+id/psikolog3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:text="Profil"
                    android:textSize="20sp" />

            </LinearLayout>

        </GridLayout>
    </LinearLayout>

</RelativeLayout>