<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_light"
    tools:context=".Pengguna.Fragments.HomePengguna">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/tv_halo_pengguna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Halo,"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_nama_pengguna_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppins_semibold"
        android:text=""
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_bukan_pengguna_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="107dp"
        android:fontFamily="@font/poppins"
        android:text="Bukan"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/tv_nama_bukan_pengguna_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="99dp"
        android:layout_marginTop="107dp"
        android:fontFamily="@font/poppins_semibold"
        android:text=""
        android:textSize="22sp" />

    <Button
        android:id="@+id/button_logout_pengguna_home"
        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="147dp"
        android:backgroundTint="#CA4D4D"
        android:fontFamily="@font/poppins_semibold"
        android:text="Keluar"
        android:textAllCaps="false"
        app:cornerRadius="5dp" />

    <TextView
        android:id="@+id/tv_butuh_psikolog_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="267dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Butuh Psikolog?"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="342dp"
        android:layout_height="219dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="321dp"
        android:background="#F6F6F6"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:layout_marginTop="24dp"
            android:layout_weight="1"
            android:src="@drawable/ellipse"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_semibold"
            android:text="Lihat Psikolog yang Tersedia"
            android:textSize="20sp" />
    </LinearLayout>

</FrameLayout>